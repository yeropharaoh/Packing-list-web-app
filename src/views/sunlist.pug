						a(href='https://www.instagram.com')
							img(src= 'images/logo-instagram.png', width='40px', height='40px', alt='logo-instagram')
						p.copyright
						| Â© 2017 YEROSAM, All Rights Reserved.


		script(type='text/javascript' src='https://code.jquery.com/jquery-3.2.1.min.js')
		script
			include todolist.js
		//- jQuery
		script.
			$(document).ready(function () {
				
					$('input#1').on('click', function(){
						K("#catt1a");
					})

					$('input#2').on('click', function(){
						K("#catt1b");
					})

					$('input#3').on('click', function(){
						K("#catt1c");
					})
					
					var K = function(cattno){
					if(($(cattno).hasClass('hidden'))) {
						if(!($(this) === $('i.fa.fa-check'))){
							$(cattno).removeClass('hidden');
							$(cattno).siblings('select').removeClass('hidden');

							$(cattno).siblings('select').show();
							$(cattno).show();
						}
					} else {
						if(!($(this) === $('i.fa.fa-check'))) {
							$(cattno).addClass('hidden');
							$(cattno).siblings('select').addClass('hidden');
						}
					}
				};
			});