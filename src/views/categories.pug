			$(document).ready(function () {
				 $('.categorysun').mouseenter(function() {
					$('.categorysnow').fadeTo('fast', 0.5, function (){});
					$('.categorycity').fadeTo('fast', 0.5, function (){
				  });
				});
				 $('.categorysun').mouseleave(function() {
					$('.categorysnow').fadeTo('fast', 1, function (){});
					$('.categorycity').fadeTo('fast', 1, function (){
				  });
				});
			});

			   

